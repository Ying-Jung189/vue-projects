{
  // 存檔時自動執行動作
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit", // 自動修復所有可修復的問題
    "source.organizeImports": "explicit" // 自動把 import 排序
  },
  // 關閉 VS Code 內建的驗證，改用 ESLint
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // 告訴 ESLint 要檢查哪些檔案
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml"
  ]
}
